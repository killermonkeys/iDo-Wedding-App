<h2>Import Guests from a CSV file</h2>

<p style="margin:1em 0;padding:0.5em 1em;background-color:#EC9B99;">
  NOTE: This may not work every time (Iâ€™m not sure why).
  If it does hang, just try clicking the submit button again.
</p>

<%= form_tag import_admin_guests_path, :multipart => true do %>
  <%= csv_fields %>
  
  <p>
    <%= check_box_tag 'destroy_all_non_admin_first' %>
    <%= label_tag 'destroy_all_non_admin_first', 'Destroy all non-admin Guest records before the import.' %>
  </p>

  <% unless true %>
    <p>
      <%= check_box_tag 'destroy_all_first' %>
      <%= label_tag 'destroy_all_first', 'Destroy ALL Guest records before the import.' %>
    </p>
  <% end %>
  
  <p><%= submit_tag 'Import' %></p>
<% end %>

