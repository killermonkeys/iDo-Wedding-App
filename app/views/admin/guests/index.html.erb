<h2>Manage Guests</h2>

<div id="admin-actions">
	<ul>
		<li><%= link_to 'Add a Guest', new_admin_guest_path %></li>
		<li><%= link_to 'My Page', guest_path %></li>
	</ul>
	<div class="clear"></div>
</div>
<% @guests.each do |guest| %>
	<div class="row">
		<div class="col col_2_3">
			<h4><%= link_to guest.full_name, admin_guest_path(guest) %></h4>
	        <ul class="address">
		      <% if guest.address.present? %>
		        <%= html_for_address(guest.address) %>
		      <% else %>
		        No Address Entered
		        (<%= link_to 'Enter One', new_admin_guest_address_path(guest) %>)
		      <% end %>
		    </ul>
		</div>
		<div class='col col_1_3 text-right'>
			<h4>PIN: <%= guest.pin %></h4>
		</div>
	</div>
	<div class="divider_thin"></div>
<% end %>