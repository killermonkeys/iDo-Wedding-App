<h2>Manage Guests</h2>

<div id="admin-actions">
	<ul>
		<li><%= link_to 'Add a Guest', new_admin_guest_path %></li>
		<li><%= link_to 'Import Guests from CSV', import_admin_guests_path %></li>
		<li><%= link_to 'My Page', guest_path %></li>
	</ul>
	<div class="clear"></div>
</div>

<% for guest in @guests %>
	<div class="admin-manage-guest-box">
		<div class='admin-manage-guest-pin'>
			<h4>PIN: <%= guest.pin %></h4>
		</div>
		<h3><%= link_to guest.full_name, admin_guest_path(guest) %></h3>
    	<ul class="address">
	      <% if guest.address.present? %>
	        <%= html_for_address(guest.address) %>
	      <% else %>
	        No Address Entered
	        (<%= link_to 'Enter One', new_admin_guest_address_path(guest) %>)
	      <% end %>
	    </ul>
	</div>
<% end %>